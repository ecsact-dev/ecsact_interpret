load("@rules_cc//cc:defs.bzl", "cc_test")
load("//bazel:copts.bzl", "copts")

_TESTS = [
    "no_capabilities",
    "no_package_statement_first",
]

[cc_test(
    name = test,
    srcs = ["{}.cc".format(test)],
    copts = copts,
    data = ["{}.ecsact".format(test)],
    deps = [
        "//test:test_lib",
        "@com_google_googletest//:gtest",
        "@com_google_googletest//:gtest_main",
    ],
) for test in _TESTS]
